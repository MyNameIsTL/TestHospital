<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/key_pad_number_spacing"
        android:layout_weight="1">

        <TextView
            android:id="@+id/key_pad_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/key_pad_number_spacing"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/key_pad_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/key_pad_number_spacing"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center"
            android:text="2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/key_pad_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/key_pad_number_spacing"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center"
            android:text="3"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/key_pad_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/key_pad_number_spacing"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center"
            android:text="4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/key_pad_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/key_pad_number_spacing"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center"
            android:text="5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/key_pad_del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/key_pad_spacing"
                android:src="@drawable/ic_key_pad_del" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/key_pad_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/key_pad_number_spacing"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center"
            android:text="6"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/key_pad_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/key_pad_number_spacing"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center"
            android:text="7"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/key_pad_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/key_pad_number_spacing"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center"
            android:text="8"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/key_pad_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/key_pad_number_spacing"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center"
            android:text="9"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/key_pad_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/key_pad_number_spacing"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/key_pad_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/colorBlue"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
